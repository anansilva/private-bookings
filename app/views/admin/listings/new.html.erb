<h1>Adicionar casa</h1>

<%= render partial: "shared/errors" %>

<form action="/admin/listings" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="title">Nome</label>
  <input type="text" name="listing[title]" value="<%= @listing.title %>">

  <label for="status">Número máximo de hóspedes</label>
  <input type="number" name="listing[max_guests]" value="<%= @listing.max_guests %>" min="1" max="50" step="1">

  <input type="submit" value="Criar Casa">
</form>

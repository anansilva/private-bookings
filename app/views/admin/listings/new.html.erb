  <%# </div> %>

  <div class="sm:col-span-6">
    <label for="max_guests" class="block text-sm font-medium text-gray-700">
      Número máximo de hóspedes
    </label>
    <input type="number" id="max_guests" name="listing[max_guests]" value="<%= @listing.max_guests %>" min="1" max="100" step="1" class="block w-full border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
  </div>

  <%# <label for="nightly_price">Preço por noite</label> %>

<h1 class="text-3xl">Adicionar casa</h1>

<%= render partial: "shared/errors" %>

<form action="/admin/listings" method="post" class="space-y-8 divide-y divide-gray-200">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="sm:col-span-6">
    <label for="title" class="block text-sm font-medium text-gray-700">
      Nome
    </label>
    <div class="mt-1">
      <input type="text" name="listing[title]" id="title" value="<%= @listing.title %>" class="block w-full border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
    </div>
  </div>

  <%# <div class="sm:col-span-6"> %>
